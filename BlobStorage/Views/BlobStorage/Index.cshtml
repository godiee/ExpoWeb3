<div class="row">
    <div class="col-12"> 
        <input type="file" id="file-bs" />
    </div>
    <div class="col-12">
        <a class="btn btn-primary" onclick="CargarBlobStorage()">Cargar</a>
    </div>
</div>

<script type="text/javascript">
    function CargarBlobStorage(){
        let filebs = document.getElementById("file-bs");
        let datafile = new FormData();
        let files = filebs.files;
        
        if(files.length > 0)
        {
            let archivo = files[0];
            datafile.append('file', archivo);
            $.ajax({
                url: "/BlobStorage/Cargar",
                type: "POST",
                data: datafile,
                processData: false,
                contentType: false,
                success: function (s){
                    alert(s);
                }, error: function (e){
                    alert("error");
                }
            })
        } else 
        {
            alert("Seleccione un archivo");
        }
    }
</script>
