@using BlobStorage.Data.EF
@model List<LogAlbum>

<h1>Auditoría del álbum</h1>

<table>
    <tr>
        <th>Id</th>
        <th>Nombre Imagen</th>
        <th>Autor</th>
        <th>Fecha y hora de subida</th>
    </tr>
    @if(Model != null)
    {
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.NombreImagen</td>
                <td>@log.NombreUsuario</td>
                <td>@log.FechaHora</td>
                <td><a href="/BlobStorage/EliminarLog/@log.Id">Eliminar Registro</a></td>
            </tr>
        }
    }

</table>
<div>
    <a class="nav-link text-dark volver" asp-area="" asp-controller="BlobStorage" asp-action="Index">Volver</a>
</div>